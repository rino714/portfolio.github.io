<!DOCTYPE html>
<html>
  <head>
    <title>TweetApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<header id="header">
<div class="logo-space">
    <h1 class="title-logo"><%= link_to("CPM-program","/")%></h1>
</div>
<nav class="header-nav-left">
    <ul class="header-list">
        <li class="header-list-item"><%= link_to("スライド一覧","/posts/index")%></li>
        <li class="header-list-item"><a href="">クイズ一覧</a></li>
        <li class="header-list-item"><%= link_to("スライド・クイズ作成","/posts/new")%></li>
        <li class="header-list-item"><%= link_to("ユーザー一覧", "/users/index") %></li>
        <li class="header-list-item"><%= link_to("新規登録", "/signup")%></li>
    </ul>
</nav>
<nav class="header-nav-right">
    <ul class="header-list-icon">
        <li class="list-icon-item"><a href=""><img src="/mail-icon.png" alt=""></a></li>
        <li class="list-icon-item"><a href=""><img src="/ring-icon.png" alt=""></a></li>
        <li class="list-icon-item"><a href=""><img src="/human-icon.png" alt=""></a></li>
    </ul>
</nav>
</header>
<% if flash[:notice]%>
<div class="flash">
  <%= flash[:notice]%>
</div>
<% end %>
    <%= yield %>
  </body>
</html>

